<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/skeleton_template"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8dp"
    app:cardCornerRadius="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ava_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/avatar"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            tools:ignore="NestedWeights,RtlSymmetry">

            <TextView
                android:id="@+id/message_pre"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:gravity="bottom"
                android:padding="0dp"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/message_user"
                style="@style/Authentication_Link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:gravity="bottom"
                android:padding="0dp"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/message_post"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:gravity="bottom"
                android:padding="0dp"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

        </LinearLayout>

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:padding="0dp"
            android:textStyle="bold"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:padding="0dp"
            android:textStyle="bold"
            tools:ignore="NestedWeights" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:id="@+id/video_layout"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:visibility="gone">

            <VideoView
                android:id="@+id/video_content"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:background="@color/black_secondary"
                android:contentDescription="@string/video" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/image_content"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/for_skeleton"
            android:contentDescription="@string/preview"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/audio_content"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/for_skeleton"
            android:contentDescription="@string/preview"
            android:scaleType="centerCrop"
            android:src="@drawable/play_cell"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>

</LinearLayout>