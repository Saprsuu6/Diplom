<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditText" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/edit_text_auto_reg</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="Bold_text" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Link" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Button" parent="EditText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Instagram.Main_theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>